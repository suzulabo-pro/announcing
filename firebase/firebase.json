{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "postdeploy": [
      "gcloud pubsub subscriptions update projects/$GCLOUD_PROJECT/subscriptions/gcf-pubsub-externalAnnounceFetch-us-central1-external-announce-fetch --min-retry-delay=1m --max-retry-delay=2m --message-retention-duration=10m",
      "gcloud pubsub subscriptions update projects/$GCLOUD_PROJECT/subscriptions/gcf-pubsub-sendNotification-us-central1-send-notification --min-retry-delay=5m --max-retry-delay=10m --message-retention-duration=60m"
    ]
  },
  "hosting": [
    {
      "target": "client",
      "public": "client",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "regex": "^/data/announces/([0-9A-Z]{12}|[0-9A-Z]{5}-[0-9a-zA-Z]{1,5})/meta/[a-zA-Z0-9]{8}$",
          "function": "httpsRequest"
        },
        {
          "regex": "^/data/announces/([0-9A-Z]{12}|[0-9A-Z]{5}-[0-9a-zA-Z]{1,5})/posts/[a-zA-Z0-9]{8}$",
          "function": "httpsRequest"
        },
        {
          "regex": "^/data/images/[a-zA-Z0-9]{15,25}$",
          "function": "httpsRequest"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.*",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=600"
            }
          ]
        },
        {
          "source": "/",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=600"
            }
          ]
        },
        {
          "source": "/build/@(app.esm.js|app.js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=30"
            }
          ]
        },
        {
          "source": "/build/p-*",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31556952, immutable"
            }
          ]
        }
      ]
    },
    {
      "target": "console",
      "public": "console",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "regex": "^/external-announces/([A-Z0-9]{5})/([a-zA-Z0-9]{1,5})$",
          "function": "httpsRequest"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.*",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=600"
            }
          ]
        },
        {
          "source": "/",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=600"
            }
          ]
        },
        {
          "source": "/build/@(app.esm.js|app.js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=30"
            }
          ]
        },
        {
          "source": "/build/p-*",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31556952, immutable"
            }
          ]
        }
      ]
    },
    {
      "target": "docs",
      "public": "docs",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "**",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=60"
            }
          ]
        }
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true
    }
  }
}
