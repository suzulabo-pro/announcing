{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",

    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",

    "outDir": "dist",
    "inlineSourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"]
}
