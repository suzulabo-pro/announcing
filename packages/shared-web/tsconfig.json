{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,

    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node"
  },
  "include": ["src", "__test__"]
}
